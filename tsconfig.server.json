{
    "compilerOptions": {
      "target": "ES2020",                
      "module": "ESNext",                
      "moduleResolution": "node",        
      "esModuleInterop": true,          
      "skipLibCheck": true,          
      "strict": true,                  
      "resolveJsonModule": true,       
      "outDir": "./dist",               
      "isolatedModules": false           
    },
    "include": ["./lib/**/*.ts"],         
    "exclude": ["node_modules"]
  }
  